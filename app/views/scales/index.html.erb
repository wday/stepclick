<h1>Listing scales</h1>

<table>
  <tr>
    <th>Experiment</th>
    <th>X0</th>
    <th>Y0</th>
    <th>X1</th>
    <th>Y1</th>
    <th>Measured length</th>
    <th>Measured units</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scales.each do |scale| %>
  <tr>
    <td><%= scale.experiment_id %></td>
    <td><%= scale.x0 %></td>
    <td><%= scale.y0 %></td>
    <td><%= scale.x1 %></td>
    <td><%= scale.y1 %></td>
    <td><%= scale.measured_length %></td>
    <td><%= scale.measured_units %></td>
    <td><%= link_to 'Show', scale %></td>
    <td><%= link_to 'Edit', edit_scale_path(scale) %></td>
    <td><%= link_to 'Destroy', scale, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

