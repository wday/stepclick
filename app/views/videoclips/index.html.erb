<div class=container-fluid>

<%= render 'navbar' %>

  <div class=row-fluid>

    <div class=span2>
    <p>
      Please note that uploading a videoclip may take a long time depending on network speed and current conditions.
    </p>
    <p>
      Once a video clip has been uploaded, it must be processed before the individual frames can be viewed - if an uploaded video needs to be processed, a process link will be in it's row in the table below and the view frames link will be unavailable
    </p>
    <%= link_to 'Upload Videoclip', new_videoclip_path, :class => 'btn' %>
    </div>

    <div class=span10>
      <h3>Videoclips</h3>

      <div>
        <table class=table>
          <tr>
            <th>Name</th>
      			<th>FPS</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

        <% @videoclips.each do |videoclip| %>
          <tr>
            <td><%= videoclip.name %></td>
      			<td><%= videoclip.fpss %></td>
            <td><%= link_to 'Edit Information', '/videoclips/' + videoclip.id.to_s + '/edit', :class => 'btn' %>
            <td><%= if not (videoclip.is_processed == 1)
                      link_to 'Process', create_frames_videoclip_path(videoclip), :class => 'btn'
                    end %>
      			</td>
            <td><%= if videoclip.is_processed
                      link_to 'Start Experiment', "videoclips/" + videoclip.id.to_s + "/start_experiment", :class => 'btn'
                    end %>
      			</td>
            <td><%= if not (videoclip._is_removed == 1)
      								link_to 'Remove',  videoclip, :confirm => 'Are you sure?', :method => :delete, :class => 'btn'
      							end%>
      			</td>
          </tr>
        <% end %>
        </table>
      </div>
</div>

