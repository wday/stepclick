<h1>Listing particles</h1>

<table>
  <tr>
    <th>Experiment</th>
    <th>Name</th>
    <th>Mass</th>
    <th>Color name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @particles.each do |particle| %>
  <tr>
    <td><%= particle.experiment_id %></td>
    <td><%= particle.name %></td>
    <td><%= particle.mass %></td>
    <td><%= particle.color_name %></td>
    <td><%= link_to 'Show', particle %></td>
    <td><%= link_to 'Edit', edit_particle_path(particle) %></td>
    <td><%= link_to 'Destroy', particle, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

